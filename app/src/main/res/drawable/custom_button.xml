<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <!-- Background for enabled state (normal) -->
        <shape android:shape="oval">
            <stroke
                android:width="2dp"/>

            <solid android:color="#4DBFF8" /> <!-- Button color for enabled state -->
        </shape>
    </item>
    <item android:state_enabled="false">
        <!-- Background for disabled state -->
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#536DFE" /> <!-- Maintain the same border color for disabled state -->
            <solid android:color="#536DFE" /> <!-- Maintain the same button color for disabled state -->
        </shape>
    </item>
</selector>
